<?import com.easymobo.openlabeler.preference.NameListPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root type="com.easymobo.openlabeler.preference.NameListPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <center>
        <ListView prefHeight="200.0" prefWidth="285.0" editable="true" fx:id="listName"/>
    </center>
    <bottom>
        <HBox alignment="TOP_RIGHT" prefHeight="30.0" prefWidth="285.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAddItem" focusTraversable="false" mnemonicParsing="false" styleClass="flat"
                        onAction="#onAddItem">
                    <graphic>
                        <FontIcon iconLiteral="mdi-plus" iconSize="16"/>
                    </graphic>
                </Button>
                <Button fx:id="btnRemoveItem" focusTraversable="false" mnemonicParsing="false" styleClass="flat"
                        onAction="#onRemoveItem">
                    <graphic>
                        <FontIcon iconLiteral="mdi-minus" iconSize="16"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </bottom>
</fx:root>
